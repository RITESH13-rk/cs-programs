#include <stdio.h>
#include <string.h>

int main() {
    char string1[20];
    int length, i, flag = 0;

    printf("Enter a string: ");
    scanf("%19s", string1);  // Limit input to avoid overflow

    printf("Entered string: %s\n", string1);

    length = strlen(string1);

    for (i = 0; i < length / 2; i++) {
        if (string1[i] != string1[length - 1 - i]) {
            flag = 1;
            break;
        }
    }

    if (flag) {
        printf("%s is not a palindrome\n", string1);
    } else {
        printf("%s is a palindrome\n", string1);
    }

    return 0;
}
