#include <stdio.h>

int main() {
    int a = 5;    // Binary: 0101
    int b = 9;    // Binary: 1001

    printf("Bitwise Operators in C\n");
    printf("------------------------\n");

    printf("a = %d, b = %d\n", a, b);

    // AND
    printf("a & b = %d\n", a & b);   // 0101 & 1001 = 0001 (1)

    // OR
    printf("a | b = %d\n", a | b);   // 0101 | 1001 = 1101 (13)

    // XOR
    printf("a ^ b = %d\n", a ^ b);   // 0101 ^ 1001 = 1100 (12)

    // NOT
    printf("~a = %d\n", ~a);         // ~0101 = 1010 (in 2's complement: -6)

    // Left Shift
    printf("a << 1 = %d\n", a << 1); // 0101 << 1 = 1010 (10)

    // Right Shift
    printf("b >> 1 = %d\n", b >> 1); // 1001 >> 1 = 0100 (4)

    return 0;
}
