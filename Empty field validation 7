// JavaScript source code
function emptyval() {

    var username = document.getElementById("usrTxt").value;

    var password = document.getElementById("passTxt").value;

    

    if (!username == "" && !password == "") {
        document.write('<h1 style="text-align: center;" "color:green;"> Submitted Successfully!!');
    } else {
        alert("Fields must be Filled!!!");
    }
}
