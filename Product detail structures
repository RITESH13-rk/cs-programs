#include <stdio.h>

struct date {
    int day;
    int month;
    int year;
};

struct details {
    char name[20];
    int price;
    int prodid;
    int qty;
    struct date dop;
};

int main() {
    struct details product[50];
    int n, i;

    printf("Program to accept and display product details using structures\n");
    printf("==============================================================\n");
    printf("Enter number of items: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nItem %d name: ", i + 1);
        scanf("%s", product[i].name);

        printf("Item ID: ");
        scanf("%d", &product[i].prodid);

        printf("Quantity: ");
        scanf("%d", &product[i].qty);

        printf("Price: ");
        scanf("%d", &product[i].price);

        printf("Date of Purchase (dd-mm-yyyy): ");
        scanf("%d-%d-%d", &product[i].dop.day, &product[i].dop.month, &product[i].dop.year);
    }

    printf("\n***** PRODUCT DETAILS *****\n");
    printf("-------------------------------------------------------------\n");
    printf("S.N.| NAME           | PRODUCT ID | QUANTITY | PRICE | PURCHASE DATE\n");
    printf("-------------------------------------------------------------\n");

    for (i = 0; i < n; i++) {
        printf("%-4d %-15s %-11d %-8d %-6d %02d/%02d/%04d\n",
               i + 1, product[i].name, product[i].prodid, product[i].qty,
               product[i].price, product[i].dop.day, product[i].dop.month, product[i].dop.year);
    }

    printf("-------------------------------------------------------------\n");

    return 0;
}
