#include <stdio.h>

int main() {
    char name[5][20];
    float amt[5], disc[5], net[5];
    float discamt;
    int i;

    printf("Program to calculate discount and display net amount of 5 customers\n");
    printf("---------------------------------------------------------------------\n");
    printf("Enter the details of 5 customers\n");

    for(i = 0; i < 5; i++) {
        printf("\nEnter Name: ");
        scanf("%19s", name[i]);  // safer than gets()

        printf("Enter Ticket amount: ");
        scanf("%f", &amt[i]);

        if(amt[i] > 70000)
            disc[i] = 18.0;
        else if(amt[i] > 55000)
            disc[i] = 16.0;
        else if(amt[i] > 35000)
            disc[i] = 12.0;
        else if(amt[i] > 25000)
            disc[i] = 10.0;
        else
            disc[i] = 2.0;

        discamt = disc[i] / 100.0f * amt[i];
        net[i] = amt[i] - discamt;
    }

    printf("\nCustomer Report\n");
    printf("===============\n");
    printf("SNo.\tName\t\tTicket Charges\tDiscount(%%)\tNet Amount\n");

    for(i = 0; i < 5; i++) {
        printf("%d\t%-15s\t%10.2f\t%10.1f\t%10.2f\n",
               i + 1, name[i], amt[i], disc[i], net[i]);
    }

    return 0;
}
