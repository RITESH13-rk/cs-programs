<?php
$id = $_POST["empid"];
$name = $_POST["empname"];
$desig = $_POST["empdesig"];
$salary = $_POST['empsal'];

$conn = mysqli_connect("localhost", "root", "", "employee_db");

if(!$conn) {
die("Connection error ".mysqli_connect_error());
}
$sql = "UPDATE emp_detail SET emp_id = '$id', emp_name = '$name', emp_desig = '$desig', salary ='$salary' Where emp_id = '$id'";

if(mysqli_query($conn, $sql)) {
echo "<center><h1>Record Updated</h1></center>";
} else {
echo "<h1>".$conn->error."</h1>";
}

$conn->close();
?>
