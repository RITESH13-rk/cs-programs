using System;
using System.Drawing;
using System.Windows.Forms;

namespace ChangeFontApp
{
    public class FontChangerForm : Form
    {
        private Label lblSample;
        private TextBox txtFontName;
        private Button btnChangeFont;

        public FontChangerForm()
        {
            this.Text = "Change Font Using TextBox";
            this.Size = new Size(400, 200);

            lblSample = new Label();
            lblSample.Text = "Sample Text";
            lblSample.Font = new Font("Arial", 14);
            lblSample.Location = new Point(30, 30);
            lblSample.AutoSize = true;

            txtFontName = new TextBox();
            txtFontName.Location = new Point(30, 70);
            txtFontName.Width = 200;
            txtFontName.PlaceholderText = "Enter font name (e.g., Arial)";

            btnChangeFont = new Button();
            btnChangeFont.Text = "Change Font";
            btnChangeFont.Location = new Point(240, 68);
            btnChangeFont.Click += new EventHandler(this.BtnChangeFont_Click);

            this.Controls.Add(lblSample);
            this.Controls.Add(txtFontName);
            this.Controls.Add(btnChangeFont);
        }

        private void BtnChangeFont_Click(object sender, EventArgs e)
        {
            string fontName = txtFontName.Text;

            try
            {
                Font newFont = new Font(fontName, 14);
                lblSample.Font = newFont;
            }
            catch
            {
                MessageBox.Show("Invalid font name. Please try again.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        [STAThread]
        static void Main()
        {
            Application.Run(new FontChangerForm());
        }
    }
}
